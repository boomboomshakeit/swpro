<!-- views/login/resetpw_loggedin.ejs -->
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>비밀번호 변경</title>
</head>
<body>
    <h1>비밀번호 변경</h1>
    <form action="/mypage/resetpw" method="post">
        <label for="current_pwd">현재 비밀번호:</label>
        <input type="password" id="current_pwd" name="current_pwd" required><br>

        <label for="new_pwd">새 비밀번호:</label>
        <input type="password" id="new_pwd" name="new_pwd" required><br>

        <label for="new_pwd2">새 비밀번호 재확인:</label>
        <input type="password" id="new_pwd2" name="new_pwd2" required><br>

        <button type="submit">비밀번호 변경</button>
    </form>
</body>
</html>
