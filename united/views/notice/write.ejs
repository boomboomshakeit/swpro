<%- include("../include/header") -%>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">
<div class="container">
	<h3 class="mb-3">게시판글쓰기</h3>
	<form action="/notice/write" method="post" enctype="multipart/form-data">
		<div class="mb-3">
			<label for="exampleFormControlInput1" class="form-label">제목</label>
			<input type="text" class="form-control" placeholder="제목을 입력해주세요." name="title">
		</div>
		<div class="mb-3">
			<label for="exampleFormControlTextarea1" class="form-label">내용</label>
			<textarea class="form-control" rows="5" placeholder="내용을 입력해주세요." name="content"></textarea>
		</div>
		<div class="mb-3">
			<label for="exampleFormControlTextarea1" class="form-label">파일업로드</label>
			<input type="file" class="form-control" name="file">
		</div>
		<div class="d-grid gap-2 d-md-flex justify-content-md-end">
			<input type="submit" class="btn btn-primary" value="작성하기">
			<a href="/notice" class="btn btn-primary">돌아가기</a>
		</div>
	</form>
</div>

<%- include("../include/footer") -%>
